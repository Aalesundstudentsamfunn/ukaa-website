    width: 50%;
    height: 70%;
    bottom: -25%;
    left: -10%;
    background: rgba(0, 0, 0, 0.08);
  }

  .event-card__banner-placeholder-type {
    position: relative;
    font-size: 0.65rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: rgba(0, 0, 0, 0.25);
  }

  /* Banner zoom indicator */
  .event-card__banner-zoom {
    position: absolute;
    bottom: 0.6rem;
    left: 0.6rem;
    display: flex;
    height: 2rem;
    width: 2rem;
    align-items: center;
    justify-content: center;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    background: rgba(27, 27, 27, 0.5);
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
    color: white;
    opacity: 0;
    transition: opacity 180ms ease;
