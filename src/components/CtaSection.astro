---
import CtaButton from "./CtaButton.astro";

export interface Props {
  title?: string;
  subtitle?: string;
  ctaLabel?: string;
  ctaHref?: string;
}

const props = Astro.props as Props;
const {
  title = "Bli med på U.-KA.",
  subtitle = "Følg med på program og oppdateringer fra Ålesund Studentsamfunn.",
  ctaLabel = "Billetter",
} = props;

const ctaHref = props.ctaHref ?? "https://tikkio.com/organizer/2624-ass-alesund-studentsamfunn";
---

<section class="w-full bg-[#f7ecd8] pb-20">
  <div class="max-w-6xl px-6 py-8 mx-auto sm:py-10">
    <div class="relative overflow-hidden text-center rounded-3xl px-8 py-16 sm:px-16 sm:py-24 bg-[#fdbc5b]">

      <!-- Dot grid texture -->
      <div class="cta-dot-bg absolute inset-0 pointer-events-none" aria-hidden="true"></div>

      <!-- Decorative blobs -->
      <div class="absolute -top-28 -right-28 h-80 w-80 rounded-full bg-[#f26f7a]/30 blur-3xl pointer-events-none" aria-hidden="true"></div>
      <div class="absolute -bottom-20 -left-24 h-72 w-72 rounded-full bg-[#81c997]/35 blur-3xl pointer-events-none" aria-hidden="true"></div>
      <div class="absolute top-4 left-1/3 h-52 w-52 rounded-full bg-[#84d5f3]/20 blur-3xl pointer-events-none" aria-hidden="true"></div>

      <!-- Inner border ring -->
      <div class="pointer-events-none absolute inset-3 rounded-2xl border border-white/30" aria-hidden="true"></div>

      <!-- Content -->
      <h3 class="relative text-4xl font-extrabold tracking-tight text-[#1b1b1b] sm:text-5xl leading-[1.1]">{title}</h3>
      <p class="relative mt-5 text-[#1b1b1b]/60 text-base sm:text-lg max-w-md mx-auto leading-relaxed">{subtitle}</p>
      <div class="relative mt-10 flex justify-center">
        <CtaButton label={ctaLabel} href={ctaHref} newTab variant="tikkio" class="px-10 py-4 text-base" />
      </div>
    </div>
  </div>
</section>

<style>
  .cta-dot-bg {
    background-image: radial-gradient(circle, rgba(27, 27, 27, 0.1) 1.5px, transparent 1.5px);
    background-size: 26px 26px;
  }
</style>
