---
import CtaButton from "./CtaButton.astro";

export interface Props {
  title?: string;
  subtitle?: string;
  ctaLabel?: string;
  ctaHref?: string;
}

const props = Astro.props as Props;
const {
  title = "Bli med på U.-KA.",
  subtitle = "Følg med på program og oppdateringer fra Ålesund Studentsamfunn.",
  ctaLabel = "Billetter",
} = props;

const ctaHref = props.ctaHref ?? "https://tikkio.com/organizer/2624-ass-alesund-studentsamfunn";
---

<section class="w-full bg-[#f7ecd8] pb-20">
  <div class="max-w-6xl px-6 py-8 mx-auto sm:py-10">
    <div class="relative px-6 py-10 overflow-hidden text-center shadow-xl rounded-3xl ring-1 ring-[#fdbc5b]/25 bg-[#fff7ea] sm:px-12 sm:py-12">
      <h3 class="text-3xl font-extrabold tracking-tight text-neutral-900 sm:text-4xl">{title}</h3>
      <p class="mt-3 text-neutral-600 sm:text-lg">{subtitle}</p>
      <div class="mt-8 flex justify-center">
        <CtaButton label={ctaLabel} href={ctaHref} newTab class="px-8 py-3 text-base" />
      </div>
    </div>
  </div>
</section>
