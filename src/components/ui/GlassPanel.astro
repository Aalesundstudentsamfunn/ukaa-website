---
import type { HTMLAttributes } from "astro/types";

export interface Props extends HTMLAttributes<"div"> {
  class?: string;
}

const { class: cls = "", ...rest } = Astro.props as Props;
---

<div
  {...rest}
  class={`relative w-full max-w-full rounded-3xl border border-white/20 
          bg-white/10 shadow-[inset_0_1px_0_rgba(255,255,255,0.25)] 
          backdrop-blur-md overflow-hidden
          px-4 py-6 sm:px-8 sm:py-10 
          mx-auto
          ${cls}`}
>
  <div
    aria-hidden
    class="pointer-events-none absolute inset-0 -z-10 mix-blend-soft-light opacity-40"
    style="background: linear-gradient(120deg,
      rgba(59,130,246,0.18),
      rgba(139,92,246,0.16),
      rgba(236,72,153,0.14));"
  ></div>

  <slot />
</div>