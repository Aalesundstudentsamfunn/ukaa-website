import MagicBackground from "./ui/MagicBackground.astro";
import { Icon } from "astro-icon/components";
const year = new Date().getFullYear();
---

<footer class="relative overflow-hidden text-white mt-auto">
  <MagicBackground showTopRule />
  <div class="mx-auto w-full max-w-6xl px-6 pt-10 pb-[calc(2.5rem+env(safe-area-inset-bottom))]">
    <div class="flex flex-col items-center justify-between gap-6 sm:flex-row">
      <div class="text-center sm:text-left">
        <p class="text-sm/6 opacity-90">Â© {year} Ski & Magi</p>
        <p class="text-sm/6 opacity-70">Vi sees i fjellet - la magien begynne.</p>
      </div>
      <nav class="flex items-center gap-5 text-sm">
        <a href="mailto:skiogmagi@astudent.no" class="inline-flex items-center gap-2 rounded-full border border-white/20 bg-white/10 px-4 py-2 text-white shadow-[inset_0_1px_0_rgba(255,255,255,0.25)] backdrop-blur-md transition hover:bg-white/20">Kontakt</a>
        <a href="https://www.facebook.com/SkiogMagi" target="_blank" aria-label="Facebook" class="grid h-10 w-10 place-items-center rounded-full border border-white/20 bg-white/10 shadow-[inset_0_1px_0_rgba(255,255,255,0.25)] backdrop-blur-md transition hover:bg-white/20">
