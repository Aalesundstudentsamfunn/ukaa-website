---
interface Props {
  title?: string;
  description?: string;
  author?: string;
  themeColor?: string;
}

const {
  title = "U.-KA.",
  description = "U.-KA. er en energisk og fargerik studentfestival arrangert av Ålesund Studentsamfunn, der festivalen samler studenter og lokalbefolkning til en uke fylt med konserter, show, foredrag og sosiale arrangementer.",
  author = "Dennis Løvold",
  themeColor = "#0b0f1a",
} = Astro.props as Props;

const siteName = "U.-KA.";

// Normalize + decide how the full title should look
const rawTitle = title || siteName;
const isHome = rawTitle === siteName;

// Browser tab title
const fullTitle = isHome ? siteName : `${rawTitle} | ${siteName}`;

// OG/Twitter titles
const socialTitle = isHome ? siteName : `${rawTitle} - ${siteName}`;

// Always use the same OG image
const ogImage = "/og-image.png";

// Absolute URL for OG/Twitter
const pageUrl = Astro.url.href;
const ogImageUrl = Astro.site
  ? new URL(ogImage, Astro.site).toString()
  : ogImage;
---

<!-- Primary Meta -->
<meta charset="utf-8" />
<meta
  name="viewport"
  content="width=device-width, height=device-height, initial-scale=1, viewport-fit=cover"
/>
<title>{fullTitle}</title>
<meta name="description" content={description} />
<meta name="author" content={author} />

<!-- Canonical -->
<link rel="canonical" href={pageUrl} />

<!-- Theme colors -->
<meta name="theme-color" content={themeColor} />

<!-- Apple mobile -->
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="black" />

<!-- Favicons -->
<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<link rel="manifest" href="/site.webmanifest" />

<!-- Open Graph -->
<meta property="og:type" content="website" />
<meta property="og:title" content={socialTitle} />
<meta property="og:description" content={description} />
<meta property="og:url" content={pageUrl} />
<meta property="og:image" content={ogImageUrl} />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={socialTitle} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImageUrl} />