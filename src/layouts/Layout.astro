---
import SiteMeta from "../components/SiteMeta.astro";
import Navigation from "../components/Navigation.astro";
import "../assets/styles/global.css";

const {
  title = "U.-KA.",
  description = "U.-KA. samler studenter og lokalbefolkning i Ã…lesund til en uke med konserter, show, foredrag og sosiale arrangementer.",
} = Astro.props;
---

<html lang="en" data-theme="cerberus">
  <head>
    <SiteMeta title={title} description={description} />
  </head>
  <body class="text-neutral-900 bg-neutral-100">
    <Navigation />
    <main class="min-h-svh flex flex-col">
      <slot />
    </main>
  </body>
</html>

<script>
  if ("serviceWorker" in navigator) {
    navigator.serviceWorker.register("/sw.js").catch(console.error);
  }
</script>
